@page
@model WebApp.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Sign In</h1>
    <h4>Users Login-Validation</h4>
    <hr />
    <div class="login" style="border: 1px solid black; display:inline-block">
        <h3>Sign In</h3>
        <hr />
        <div class="row" >
                <form method="post" style="text-align: center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="width: 90%; display: inline-block; margin-bottom: 25px">
                        <label asp-for="User.UserName" class="control-label"></label>
                        <input asp-for="User.UserName" class="form-control" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group"  style="width: 90%; display: inline-block; margin-bottom: 25px">
                        <label asp-for="User.Password" class="control-label"></label>
                        <input asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>
                    @*<div class="form-group" style="width: 90%; display: inline-block; margin-bottom: 25px">
                        <label class="control-label">Username</label>
                        <input class="form-control" />
                        <span  class="text-danger"></span>
                    </div>
                    <div class="form-group"  style="width: 90%; display: inline-block; margin-bottom: 25px">
                        <label class="control-label">Password</label>
                        <input class="form-control" />
                        <span  class="text-danger"></span>
                    </div>*@
                    <div class="form-group" style="margin-bottom: 15px">
                        <input type="submit" value="Sign In" class="btn btn-primary" />
                    </div>
                </form>

                <hr />
                <h4>New user</h4>
                <div class="form-group" style="margin-bottom: 15px">
                        <a asp-page="/Users/Create" class="btn-primary btn-primary" style="text-decoration: none; padding: .5em">Sign Up</a>
                        
                    </div>

        </div>
    </div>

    <div>
        <a asp-page="/Users">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
